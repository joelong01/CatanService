{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug collect_env.sh update",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/scripts/collect_env.sh",
            "args": [
                "update"
            ],
            "terminalKind": "integrated"
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (select script from list of sh files)",
            "cwd": "${workspaceFolder}",
            "program": "${command:SelectScriptName}",
            "args": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'catan_service'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=catan_service",
                    "--package=catan_service",
                ],
                "filter": {
                    "name": "catan_service",
                    "kind": "bin"
                }
            },
            "args": [
                "--config-file",
                "${env:HOME}/.catanService.json"
            ],
            "cwd": "${workspaceFolder}",
            "envFile": "${env:HOME}/.catanService.env"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'catan_service'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=catan_service",
                    "--package=catan_service",
                ],
                "filter": {
                    "name": "catan_service",
                    "kind": "bin"
                }
            },
            "args": [
                "--config-file",
                "${env:HOME}/.catanService.json"
            ],
            "envFile": "${env:HOME}/.catanService.env",
            "cwd": "${workspaceFolder}"
        }
    ]
}