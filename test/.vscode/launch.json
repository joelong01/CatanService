{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (select script from list of sh files)",
            "cwd": "${workspaceFolder}",
            "program": "${command:SelectScriptName}",
            "args": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rust_cli_app'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust_cli_app",
                    "--package=rust_cli_app"
                ],
                "filter": {
                    "name": "rust_cli_app",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rust_cli_app'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rust_cli_app",
                    "--package=rust_cli_app"
                ],
                "filter": {
                    "name": "rust_cli_app",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}